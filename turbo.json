{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalDotEnv": [".env"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "dotEnv": [".env.production.local"],
      "env": ["POSTGRES_PRISMA_URL"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "dotEnv": [".env.production.local"],
      "env": ["POSTGRES_PRISMA_URL", "NODE_ENV"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dotEnv": [".env"],
      "env": ["POSTGRES_PRISMA_URL", "NODE_ENV"]
    }
  }
}
